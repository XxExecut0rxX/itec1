        <!-- dashboard -->

        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div
                class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Productos</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="btn-group me-2">
                        <button type="button" class="btn btn-sm btn-outline-secondary">Share</button>
                        <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
                    </div>
                    <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
                        <span data-feather="calendar" class="align-text-bottom"></span>
                        This week
                    </button>
                </div>
            </div>


            <h2>Catalogo de Productos</h2>
            <div class="container py-4">
                <div class="row">
                    {{#each list}}
                        <div class="col col-3">
                            <div class="card">
                                {{!-- <a href=""><img src="/catalog_imgs/{{id}}.png" class="card-img-top" alt="..."></a> --}}
                                <a href=""><img src="/catalog_imgs/1.png" class="card-img-top" alt="..."></a>
                                <div class="card-body">
                                    <h5 class="card-title">{{name}}</h5>
                                    <p class="card-text">PRECIO: {{price}} Bs</p>
                                    <h5 class="card-title pb-3">STOCK: {{stock}}</h5>
                                    <div class="text-center">
                                        <a href="/links/edit/{{id}}" class="btn btn-secondary me-3"><span>Editar</span></a>
                                        <a href="/links/delete/{{id}}" class="btn btn-danger"><span>Eliminar</span></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{else}}
                        <div class="col-md-8 mx-auto text-center pt-5">
                            <div class="card card-body">
                                <h2>No hay ningún producto registrado</h2>
                                <a href="/links/add"><h3>Añadir Un nuevo Producto</h3></a>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>
        </main>
    </div>
</div>
